4. #include <iostream>
   using namespace std;
   int a, s, i;
int main()
{
    setlocale (LC_ALL, "RU");
   
    s = 1; 
    cin >> a; 
    for (i = a;i <= 20;i++)
    s = s * i;

    cout << "proizvedenie = " << s;
    
    return 0;

}


5.#include <iostream>
   using namespace std;
int main()
{
    setlocale (LC_ALL, "RU");
   
    unsigned k, z;
    cout << "Введите число k= ";
    cin >> k;

    for (int i = 1; i <10; i++) {
	z = k * i;
	cout << "\n";
	cout << k << "*" << i << "=" << z;
}

return 0;


}

